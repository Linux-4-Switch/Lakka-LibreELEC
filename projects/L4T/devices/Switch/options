#we use mesa for includes and headers, but replace the binaries by the nvidia blobs
OPENGL="mesa"
VULKAN="mesa"

LINUX="switch"
KERNEL_VERSION="l4t-rel32.4.4"
KERNEL_URL="https://gitlab.com/Azkali/l4t-kernel-4.9/-/archive/$KERNEL_VERSION/l4t-kernel-4.9-$KERNEL_VERSION.tar.gz"

#disable arm target
if [ "$ARCH" == "arm" ]; then
    echo "Error: 32bit ARM arch is not supported by L4T"
    exit 1
fi
