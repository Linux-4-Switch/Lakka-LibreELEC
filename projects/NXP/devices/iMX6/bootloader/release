SRCDIR="$BUILD/image/system/usr/share/bootloader"
DSTDIR="$RELEASE_DIR/3rdparty/bootloader"

  if [ -n "$UBOOT_SYSTEM" ]; then
    mkdir -p "$DSTDIR"
      cp -a "$SRCDIR/SPL" "$DSTDIR"
      cp -a "$SRCDIR/u-boot.img" "$DSTDIR"
      cp -a "$SRCDIR"/*${UBOOT_SYSTEM}*.dtb "$DSTDIR"
  fi
